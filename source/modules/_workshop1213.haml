        23&nbsp;&nbsp;&nbsp;DICEMBRE&nbsp;&nbsp;2013
      %span.hour
        10-18
      %span.address
        VIA&nbsp;&nbsp;MANTOVA,36
      %span.place
        TORINO

    %section.register
      %h3 VUOI&nbsp;&nbsp;&nbsp;PARTECIPARE?
      %p.conditions
        La partecipazione &egrave; gratuita e riservata a 5 team selezionati (max 10 persone)
      - form_tag 'http://mailinglist.thedoersproject.com/subscribe', :id => "signup-form-wp1213", :name => "signup-form", :"accept-charset" => "utf-8", :class => 'submit-form', :method => 'POST' do
        - field_set_tag do
          %p
            = text_field_tag :name, :name => "name", :id => 'name', :class=>"name", :placeholder=>"Il tuo nome", :type=>"text"
            = text_field_tag :email, :name => "email", :id => 'email', :class=>"email", :placeholder=>"La tua email", :type=>"text"
          = hidden_field_tag  :list, :value => "KgDMXDrqaKxmv6NDzCziJQ", :name => "list", :id => 'submit_list'
          = hidden_field_tag  :listall, :value => "f4B1RXA44QJWHwOkMzitlA", :name => "list all", :id => 'submit_listall'
          = hidden_field_tag  :success, :value => "/workshops/2013/thank-you-workshop1213.html", :name => "success", :id => 'submit_success'
          = hidden_field_tag  :element, :value => "#workshop1213_tk", :name => "element", :id => 'submit_element'
          = hidden_field_tag  :language, :value => "it", :name => "language", :id => 'language'
          %p
            = submit_tag "Submit-wp1213", :name => "submit", :id => 'submit-btn-wp1213',:class=> "send", :value=>'VOGLIO&nbsp;&nbsp;&nbsp;&nbsp;PARTECIPARE!'
          %p#status-wp1213.status

    %footer
      =partial "partials/share_tag", :locals => {:url => "http://thedoers.co/workshops/2013/Come-validare-la-mia-startup.html", :twitter_title => "Non è l'idea che fa l'imprenditore, ma la capacità di validarla. Inizia con un Workshop http://thedoers.co/workshops/2013/Come-validare-la-mia-startup.html #startup #analytics #lean", :title => "Workshop - Come Validare la Mia Startup"}
      .image-container
        = image_tag 'workshop/workshop_background-mobile.png', id:'workshop_bg-footer', alt:'Workshop'
